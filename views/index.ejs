<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>MyCol App</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">MyCollection App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addItem">Add New Item</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>My Collection</h2></div>
    <br>
    <div class="container-xl">
      <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
          <% for(let i=0; i < itemlist.length; i++) { %>
            <div class="col">
              <div class="card text-dark bg-light mb-3" style="height: 23rem;">
                <br><br>
                <span class="border border-2" border-radius=".25rem">
                  <a href="/item/<%= itemlist[i].id%>"><img src="images/<%= itemlist[i].image %>" class="card-img-top" height="100%"></a></h5>
                </span>          
                <div class="card-body">
                  <h5 class="card-title"><%= itemlist[i].name %></h5>
                  <p class="card-text"><%= itemlist[i].variant %></p>
                </div>
              </div>
            </div>
          <% } %>
      </div>
    </div>
  </div>
</body>
</html>

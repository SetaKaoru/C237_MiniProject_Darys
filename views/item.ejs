<!-- item.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Student List App</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">MyCollection App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/addItem">Add New Item</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Item Details</h2></div>
        <br>
        <% if (item) { %> <!-- Check if item data exists -->
          <div class="position-relative">
            <div class="position-absolute top-0 start-50 translate-middle-x">
              <div class="card" style="width: 60rem;">
                <span class="border border-2" border-radius=".25rem">
                  <img src="/images/<%= item.image %>" class="card-img-top" width="10%">
                </span>
                <div class="card-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text"><%= item.variant %></p>
                  <p class="card-text"><%= item.history %></p>
                </div>
              </div>
            </div>
          </div>
          <br>
        <% } else { %>
            <p>No item found.</p>
        <% } %>
    </div>
    <div class="container">
      <div class="position-absolute top-50 start-20 translate-middle">
        <a class="btn btn-primary btn-lg" href="/editItem/<%= item.id %>" role="button">Edit Item</a>
        <p>   </p>
        <a class="btn btn-primary btn-lg" href="/" role="button">Back</a><br>
        <p>   </p>
        <a type="button" class="btn btn-danger btn-lg mx-auto" href="/deleteItem/<%= item.id %>" onclick="return confirm('Are you sure you want to delete this item?')">     Remove Item     </a>
      </div>
    </div>
    
</body>
</html>
